@model alicedress.Areas.Admin.Controllers.DashboardController.DashboardViewModel
@{
    ViewData["Title"] = "Дашборд";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Дашборд</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-download"></i> Экспорт
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="stat-card primary">
            <div class="d-flex justify-content-between">
                <div>
                    <h5>Товары</h5>
                    <h2>@Model.TotalProducts</h2>
                </div>
                <i class="bi bi-box-seam display-6"></i>
            </div>
            <a href="@Url.Action("Index", "Products")" class="text-white">Управление →</a>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card success">
            <div class="d-flex justify-content-between">
                <div>
                    <h5>Заказы</h5>
                    <h2>@Model.TotalOrders</h2>
                </div>
                <i class="bi bi-cart-check display-6"></i>
            </div>
            <a href="@Url.Action("Index", "Orders")" class="text-white">Управление →</a>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card warning">
            <div class="d-flex justify-content-between">
                <div>
                    <h5>Пользователи</h5>
                    <h2>@Model.TotalUsers</h2>
                </div>
                <i class="bi bi-people display-6"></i>
            </div>
            <a href="@Url.Action("Index", "Users")" class="text-white">Управление →</a>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card danger">
            <div class="d-flex justify-content-between">
                <div>
                    <h5>Выручка</h5>
                    <h2>@Model.TotalRevenue.ToString("N0") ₽</h2>
                </div>
                <i class="bi bi-currency-ruble display-6"></i>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Последние заказы</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentOrders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Дата</th>
                                    <th>Клиент</th>
                                    <th>Сумма</th>
                                    <th>Статус</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@order.CustomerName</td>
                                        <td>@order.TotalAmount.ToString("N0") ₽</td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(order.Status)">
                                                @order.Status
                                            </span>
                                        </td>
                                        <td class="table-actions">
                                            <a href="@Url.Action("Details", "Orders", new { id = order.Id })"
                                               class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Заказов нет</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Низкий остаток</h5>
            </div>
            <div class="card-body">
                @if (Model.LowStockProducts.Any())
                {
                    <div class="list-group">
                        @foreach (var product in Model.LowStockProducts)
                        {
                            <a href="@Url.Action("Edit", "Products", new { id = product.Id })"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@product.Name</h6>
                                    <small>@product.StockQuantity шт</small>
                                </div>
                                <small class="text-danger">Требуется пополнение</small>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">Все товары в наличии</p>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Новый" => "bg-primary",
            "Подтвержден" => "bg-info",
            "В обработке" => "bg-warning",
            "Отправлен" => "bg-secondary",
            "Доставлен" => "bg-success",
            "Отменен" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}