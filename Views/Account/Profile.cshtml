@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Личный кабинет";
    var user = await UserManager.GetUserAsync(User);
}

<div class="container py-5">
    <h1 class="h2 fw-bold mb-4">Личный кабинет</h1>

    <div class="row">
        <!-- Сайдбар -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="avatar mb-3">
                            <i class="bi bi-person-circle display-4 text-primary"></i>
                        </div>
                        <h5 class="fw-bold">@User.Identity?.Name</h5>
                        <p class="text-muted small">Покупатель</p>
                    </div>

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#profile" data-bs-toggle="tab">
                                <i class="bi bi-person me-2"></i> Профиль
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#orders" data-bs-toggle="tab">
                                <i class="bi bi-bag me-2"></i> Мои заказы
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#favorites" data-bs-toggle="tab">
                                <i class="bi bi-heart me-2"></i> Избранное
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#reviews" data-bs-toggle="tab">
                                <i class="bi bi-star me-2"></i> Мои отзывы
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#settings" data-bs-toggle="tab">
                                <i class="bi bi-gear me-2"></i> Настройки
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="nav-link text-danger border-0 bg-transparent text-start">
                                    <i class="bi bi-box-arrow-right me-2"></i> Выйти
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Основной контент -->
        <div class="col-lg-9 col-md-8">
            <div class="tab-content">
                <!-- Профиль -->
                <div class="tab-pane fade show active" id="profile">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Личные данные</h5>

                            <form id="profileForm">
                                <div class="row mb-4">
                                    <div class="col-md-6 mb-3">
                                        <label for="profileFirstName" class="form-label">Имя</label>
                                        <input type="text" class="form-control" id="profileFirstName" value="Анна">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="profileLastName" class="form-label">Фамилия</label>
                                        <input type="text" class="form-control" id="profileLastName" value="Петрова">
                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-md-6 mb-3">
                                        <label for="profileEmail" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="profileEmail" value="anna@example.com">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="profilePhone" class="form-label">Телефон</label>
                                        <input type="tel" class="form-control" id="profilePhone" value="+7 (999) 123-45-67">
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="profileAddress" class="form-label">Адрес доставки</label>
                                    <textarea class="form-control" id="profileAddress" rows="3">г. Москва, ул. Примерная, 10, кв. 25</textarea>
                                </div>

                                <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Мои заказы -->
                <div class="tab-pane fade" id="orders">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-4">История заказов</h5>

                            @if (true) // В реальном приложении проверяем наличие заказов
                            {
                                <!-- Заказ 1 -->
                                <div class="order-card mb-4 border-bottom pb-4">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h6 class="fw-bold mb-1">Заказ #ORD-2024-001</h6>
                                            <p class="text-muted small mb-0">от 15 марта 2024</p>
                                        </div>
                                        <div>
                                            <span class="badge bg-success">Выполнен</span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <p class="mb-1"><strong>Состав заказа:</strong></p>
                                            <ul class="list-unstyled small">
                                                <li>Элегантное платье миди × 1</li>
                                                <li>Блузка с рюшами × 1</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-1"><strong>Доставка:</strong></p>
                                            <p class="small mb-1">Курьером по адресу</p>
                                            <p class="small mb-1">г. Москва, ул. Примерная, 10</p>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">Итого: ₽ 7 990</span>
                                        <div>
                                            <button class="btn btn-sm btn-outline-primary me-2">
                                                <i class="bi bi-repeat"></i> Повторить заказ
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-eye"></i> Подробнее
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Заказ 2 -->
                                <div class="order-card mb-4 border-bottom pb-4">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h6 class="fw-bold mb-1">Заказ #ORD-2024-002</h6>
                                            <p class="text-muted small mb-0">от 10 февраля 2024</p>
                                        </div>
                                        <div>
                                            <span class="badge bg-warning text-dark">В доставке</span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <p class="mb-1"><strong>Состав заказа:</strong></p>
                                            <ul class="list-unstyled small">
                                                <li>Юбка-карандаш × 1</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-1"><strong>Доставка:</strong></p>
                                            <p class="small mb-1">Самовывоз</p>
                                            <p class="small mb-1">г. Москва, ул. Примерная, 10</p>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">Итого: ₽ 3 200</span>
                                        <div>
                                            <button class="btn btn-sm btn-outline-primary me-2">
                                                <i class="bi bi-repeat"></i> Повторить заказ
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-eye"></i> Подробнее
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="bi bi-bag display-1 text-muted mb-3"></i>
                                    <p class="text-muted">У вас еще нет заказов</p>
                                    <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary">
                                        Начать покупки
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Избранное -->
                <div class="tab-pane fade" id="favorites">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Избранные товары</h5>

                            <div class="row g-3">
                                @for (int i = 1; i <= 4; i++)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex border rounded p-3">
                                            <div class="flex-shrink-0">
                                                <img src="https://via.placeholder.com/80x80/ff6b8b/ffffff"
                                                     class="rounded"
                                                     alt="Товар">
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h6 class="fw-bold mb-1">Товар @i</h6>
                                                <p class="text-muted small mb-2">Платье миди с кружевными вставками</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="fw-bold">₽ @(2990 + i * 500)</span>
                                                    <div>
                                                        <button class="btn btn-sm btn-outline-primary me-1">
                                                            <i class="bi bi-bag"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-heart-fill"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Мои отзывы -->
                <div class="tab-pane fade" id="reviews">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Мои отзывы</h5>

                            <!-- Отзыв 1 -->
                            <div class="review-card mb-4 border-bottom pb-4">
                                <div class="d-flex mb-3">
                                    <div class="flex-shrink-0">
                                        <img src="https://via.placeholder.com/60x60/ff6b8b/ffffff"
                                             class="rounded"
                                             alt="Товар">
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="fw-bold mb-1">Элегантное платье миди</h6>
                                        <div class="stars mb-2">
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <i class="bi bi-star-fill text-warning"></i>
                                        </div>
                                        <p class="mb-2">Отличное платье! Сидит идеально, ткань приятная к телу. Заказывала размер M (обычно ношу M) - подошло perfectly.</p>
                                        <p class="text-muted small mb-0">Опубликовано 2 недели назад</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Настройки -->
                <div class="tab-pane fade" id="settings">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Настройки аккаунта</h5>

                            <div class="mb-4">
                                <h6 class="fw-bold mb-3">Смена пароля</h6>
                                <form>
                                    <div class="mb-3">
                                        <label for="currentPassword" class="form-label">Текущий пароль</label>
                                        <input type="password" class="form-control" id="currentPassword">
                                    </div>
                                    <div class="mb-3">
                                        <label for="newPassword" class="form-label">Новый пароль</label>
                                        <input type="password" class="form-control" id="newPassword">
                                    </div>
                                    <div class="mb-3">
                                        <label for="confirmPassword" class="form-label">Подтвердите новый пароль</label>
                                        <input type="password" class="form-control" id="confirmPassword">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Сменить пароль</button>
                                </form>
                            </div>

                            <hr class="my-4">

                            <div class="mb-4">
                                <h6 class="fw-bold mb-3">Уведомления</h6>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="emailNotifications" checked>
                                    <label class="form-check-label" for="emailNotifications">
                                        Email-уведомления о заказах и акциях
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="smsNotifications">
                                    <label class="form-check-label" for="smsNotifications">
                                        SMS-уведомления о статусе заказа
                                    </label>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div>
                                <h6 class="fw-bold mb-3">Удаление аккаунта</h6>
                                <p class="text-muted small mb-3">После удаления аккаунта все ваши данные будут безвозвратно удалены.</p>
                                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                                    Удалить аккаунт
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно удаления аккаунта -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Удаление аккаунта</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Вы уверены, что хотите удалить свой аккаунт? Это действие нельзя отменить.</p>
                <p class="text-danger">Все ваши данные, заказы и отзывы будут удалены.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-danger">Удалить аккаунт</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Активация табов при клике на ссылки в сайдбаре
            const triggerTabList = document.querySelectorAll('a[data-bs-toggle="tab"]');
            triggerTabList.forEach(triggerEl => {
                triggerEl.addEventListener('click', function(e) {
                    e.preventDefault();
                    const tabTrigger = new bootstrap.Tab(this);
                    tabTrigger.show();

                    // Обновляем активный класс в навигации
                    document.querySelectorAll('.nav-link').forEach(link => {
                        link.classList.remove('active');
                    });
                    this.classList.add('active');
                });
            });

            // Обработка формы профиля
            const profileForm = document.getElementById('profileForm');
            profileForm.addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Изменения сохранены!');
            });
        });
    </script>
}

@section Styles {
    <style>
        .avatar {
            width: 100px;
            height: 100px;
            background-color: #f8f9fa;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }

        .nav-link {
            padding: 0.75rem 1rem;
            color: #495057;
            border-radius: 5px;
            margin-bottom: 5px;
            transition: all 0.3s;
        }

            .nav-link:hover {
                background-color: #f8f9fa;
                color: var(--primary-color);
            }

            .nav-link.active {
                background-color: var(--primary-color);
                color: white;
            }

        .order-card {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
        }

        .stars {
            color: #ffc107;
        }

        .review-card {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
        }
    </style>
}