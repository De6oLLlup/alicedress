@model alicedress.Models.CartViewModel
@{
    ViewData["Title"] = "Корзина покупок";
}

<div class="container py-5">
    <h1 class="mb-4">Корзина покупок</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model?.CartItems == null || !Model.CartItems.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-cart display-1 text-muted"></i>
            <h3 class="mt-3">Корзина пуста</h3>
            <p class="text-muted">Добавьте товары из каталога</p>
            <a href="/Catalog" class="btn btn-primary mt-3">Перейти в каталог</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Товар</th>
                                <th>Цена</th>
                                <th>Количество</th>
                                <th>Итого</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@Url.Action("GetProductImage", "Image", new { productId = item.ProductId })"
                                                 class="img-thumbnail me-3"
                                                 alt="@item.ProductName"
                                                 style="width: 80px; height: 80px; object-fit: cover;"
                                                 onerror="this.onerror=null;this.src='/images/products/no-image.jpg';">
                                            <div>
                                                <strong>@item.ProductName</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.Price.ToString("N0") ₽</td>
                                    <td>
                                        <form method="post" asp-action="UpdateQuantity" class="d-flex align-items-center">
                                            <input type="hidden" name="itemId" value="@item.Id" />
                                            <div class="input-group" style="width: 120px;">
                                                <button type="button" class="btn btn-outline-secondary btn-sm quantity-minus"
                                                        data-item-id="@item.Id">
                                                    <i class="bi bi-dash"></i>
                                                </button>
                                                <input type="number" name="quantity" value="@item.Quantity" min="1" max="99"
                                                       class="form-control form-control-sm text-center quantity-input"
                                                       data-item-id="@item.Id">
                                                <button type="button" class="btn btn-outline-secondary btn-sm quantity-plus"
                                                        data-item-id="@item.Id">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>
                                            <button type="submit" class="btn btn-sm btn-outline-primary ms-2">
                                                <i class="bi bi-check"></i>
                                            </button>
                                        </form>
                                    </td>
                                    <td>@item.TotalPrice.ToString("N0") ₽</td>
                                    <td>
                                        <form method="post" asp-action="RemoveItem">
                                            <input type="hidden" name="itemId" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Удалить товар из корзины?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <a href="/Catalog" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Продолжить покупки
                    </a>
                    <form method="post" asp-action="Clear" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger ms-2"
                                onclick="return confirm('Очистить всю корзину?')">
                            <i class="bi bi-trash"></i> Очистить корзину
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Итого</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Товары (@Model.CartItems.Count)</span>
                            <span id="subTotal">@Model.SubTotal.ToString("N0") ₽</span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Способ доставки</label>
                            <select class="form-select" id="deliveryMethod">
                                <option value="Самовывоз" selected>Самовывоз (бесплатно)</option>
                                <option value="Курьер">Доставка курьером (300 ₽)</option>
                                <option value="Почта России">Почта России (200 ₽)</option>
                                <option value="СДЭК">СДЭК (250 ₽)</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Доставка</span>
                            <span id="deliveryCost">0 ₽</span>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between fw-bold fs-5">
                            <span>К оплате</span>
                            <span id="totalAmount">@Model.Total.ToString("N0") ₽</span>
                        </div>

                        <div class="mt-4">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="/Checkout" class="btn btn-success btn-lg w-100">
                                    <i class="bi bi-check-circle"></i> Оформить заказ
                                </a>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <p class="mb-2">Для оформления заказа войдите в систему</p>
                                    <a href="/Identity/Account/Login?returnUrl=/Cart" class="btn btn-primary w-100">
                                        <i class="bi bi-box-arrow-in-right"></i> Войти
                                    </a>
                                    <p class="mt-2 small mb-0">Или <a href="/Identity/Account/Register">зарегистрируйтесь</a></p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Обновление количества через кнопки +/-
            $('.quantity-plus').on('click', function() {
                var itemId = $(this).data('item-id');
                var input = $('.quantity-input[data-item-id="' + itemId + '"]');
                var currentVal = parseInt(input.val());
                if (currentVal < 99) {
                    input.val(currentVal + 1);
                }
            });

            $('.quantity-minus').on('click', function() {
                var itemId = $(this).data('item-id');
                var input = $('.quantity-input[data-item-id="' + itemId + '"]');
                var currentVal = parseInt(input.val());
                if (currentVal > 1) {
                    input.val(currentVal - 1);
                }
            });

            // Расчет стоимости при изменении способа доставки
            $('#deliveryMethod').on('change', function() {
                calculateTotal();
            });

            function calculateTotal() {
                var deliveryMethod = $('#deliveryMethod').val();
                var subTotal = @Model.SubTotal;

                $.ajax({
                    url: '@Url.Action("CalculateTotal", "Cart")',
                    type: 'POST',
                    data: { deliveryMethod: deliveryMethod },
                    success: function(response) {
                        if (response.success) {
                            $('#deliveryCost').text(response.deliveryCost.toLocaleString('ru-RU') + ' ₽');
                            $('#totalAmount').text(response.total.toLocaleString('ru-RU') + ' ₽');

                            // Сохраняем выбранный способ доставки в сессию
                            localStorage.setItem('selectedDeliveryMethod', deliveryMethod);
                        }
                    },
                    error: function() {
                        alert('Ошибка при расчете стоимости доставки');
                    }
                });
            }

            // Восстанавливаем выбранный способ доставки
            var savedMethod = localStorage.getItem('selectedDeliveryMethod');
            if (savedMethod) {
                $('#deliveryMethod').val(savedMethod);
                calculateTotal();
            }
        });
    </script>
}