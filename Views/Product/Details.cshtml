@model alicedress.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Главная</a></li>
            <li class="breadcrumb-item"><a href="/Catalog">Каталог</a></li>
            <li class="breadcrumb-item"><a href="/Catalog?category=@Model.Category">@Model.Category</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Галерея изображений -->
        <div class="col-lg-6">
            <div class="product-gallery">
                <!-- Основное изображение -->
                <div class="main-image mb-3">
                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <img src="@Model.Images.First().ImageUrl"
                             class="img-fluid rounded"
                             alt="@Model.Name"
                             id="mainImage"
                             onerror="this.onerror=null; this.src='/images/no-image/no-image.jpg';">
                    }
                    else
                    {
                        <img src="/images/no-image/no-image.jpg"
                             class="img-fluid rounded"
                             alt="@Model.Name"
                             id="mainImage">
                    }
                </div>

                <!-- Миниатюры -->
                @if (Model.Images != null && Model.Images.Any())
                {
                    <div class="thumbnails d-flex flex-wrap">
                        @foreach (var image in Model.Images)
                        {
                            <div class="thumbnail me-2 mb-2" style="width: 80px; cursor: pointer;">
                                <img src="@image.ImageUrl"
                                     class="img-thumbnail @(image == Model.Images.First() ? "active" : "")"
                                     alt="@Model.Name"
                                     onclick="changeMainImage(this.src)"
                                     onerror="this.onerror=null; this.src='/images/no-image/no-image.jpg';">
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Информация о товаре -->
        <div class="col-lg-6">
            <h1 class="mb-3">@Model.Name</h1>

            <!-- Артикул и статус -->
            <div class="mb-4">
                <p class="text-muted">Артикул: @Model.Article</p>
                @if (Model.IsBestseller)
                {
                    <span class="badge bg-danger me-2">Бестселлер</span>
                }
                @if (DateTime.Now.Subtract(Model.CreatedDate).TotalDays < 30)
                {
                    <span class="badge bg-success">Новинка</span>
                }
            </div>

            <!-- Цена и наличие -->
            <div class="mb-4">
                <h2 class="text-primary">@Model.Price.ToString("N0") ₽</h2>
                @if (Model.StockQuantity > 0)
                {
                    <div class="d-flex align-items-center">
                        <span class="badge bg-success me-2">В наличии</span>
                        <small class="text-muted">Осталось: @Model.StockQuantity шт.</small>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        Товар временно отсутствует на складе
                    </div>
                }
            </div>

            <!-- Кнопка добавления в корзину -->
            @if (Model.StockQuantity > 0)
            {
                <form method="post" asp-controller="Cart" asp-action="AddToCart" class="mb-4">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label class="form-label">Количество:</label>
                        </div>
                        <div class="col-auto">
                            <input type="number" name="quantity" value="1" min="1" max="@Model.StockQuantity"
                                   class="form-control" style="width: 80px;">
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-cart-plus"></i> Добавить в корзину
                            </button>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <button class="btn btn-secondary btn-lg mb-4" disabled>
                    <i class="bi bi-cart-x"></i> Товар закончился
                </button>
            }

            <!-- Описание -->
            <div class="mb-4">
                <h5>Описание</h5>
                <p>@Model.Description</p>
            </div>

            <!-- Состав -->
            @if (!string.IsNullOrEmpty(Model.Composition))
            {
                <div class="mb-4">
                    <h5>Состав</h5>
                    <p>@Model.Composition</p>
                </div>
            }

            <!-- Категория -->
            <div class="mb-4">
                <h5>Категория</h5>
                <a href="/Catalog?category=@Model.Category" class="badge bg-info text-decoration-none">@Model.Category</a>
            </div>

            <!-- Кнопки навигации -->
            <div class="mt-4">
                <a href="/Catalog" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад в каталог
                </a>
            </div>
        </div>
    </div>

    <!-- Отзывы (если нужны) -->
    <div class="row mt-5">
        <div class="col-12">
            <h4>Отзывы о товаре</h4>
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                foreach (var review in Model.Reviews)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h6>Пользователь</h6>
                                <div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi @(i <= review.Rating ? "bi-star-fill text-warning" : "bi-star")"></i>
                                    }
                                </div>
                            </div>
                            <p class="card-text">@review.Comment</p>
                            <small class="text-muted">@review.CreatedDate.ToString("dd.MM.yyyy")</small>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Пока нет отзывов о товаре. Будьте первым!</p>
            }
        </div>
    </div>
</div>

<style>
    .product-gallery .main-image {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        overflow: hidden;
        aspect-ratio: 1/1;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .product-gallery .main-image img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

    .product-gallery .thumbnail {
        transition: border-color 0.2s;
    }

        .product-gallery .thumbnail img {
            width: 100%;
            height: 80px;
            object-fit: cover;
        }

            .product-gallery .thumbnail img:hover,
            .product-gallery .thumbnail img.active {
                border-color: #0d6efd;
            }

    .badge {
        font-size: 0.9rem;
        padding: 5px 10px;
    }
</style>

<script>
    function changeMainImage(src) {
        document.getElementById('mainImage').src = src;

        // Убираем активный класс у всех миниатюр
        document.querySelectorAll('.thumbnail img').forEach(img => {
            img.classList.remove('active');
        });

        // Добавляем активный класс текущей миниатюре
        event.target.classList.add('active');
    }
</script>