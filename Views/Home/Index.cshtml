@model IEnumerable<alicedress.Models.Product>
@{
    ViewData["Title"] = "Alice Dress - Интернет-магазин одежды";

    // Защита от null
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var products = Model?.ToList() ?? new List<alicedress.Models.Product>();
}

<div class="container">
    <!-- Герой-секция -->
    <div class="hero-section text-center py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 10px;">
        <h1 class="display-4 fw-bold">Alice Dress</h1>
        <p class="lead">Стильная одежда для современных женщин</p>
        <a href="/Catalog" class="btn btn-light btn-lg mt-3">Перейти в каталог</a>
    </div>

    <!-- Бестселлеры -->
    <div class="mb-5">
        <h2 class="text-center mb-4">Бестселлеры</h2>

        @if (products.Any())
        {
            <div class="row">
                @foreach (var product in products)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 product-card">
                            <div class="product-image-container">
                                @if (product.Images != null && product.Images.Any())
                                {
                                    <a href="@Url.Action("Details", "Product", new { id = product.Id })">
                                        <img src="@product.Images.First().ImageUrl"
                                             class="card-img-top product-image"
                                             alt="@product.Name"
                                             onerror="this.onerror=null; this.src='/images/no-image/no-image.jpg';">
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Details", "Product", new { id = product.Id })">
                                        <img src="/images/no-image/no-image.jpg"
                                             class="card-img-top product-image"
                                             alt="@product.Name">
                                    </a>
                                }

                                @if (product.IsBestseller)
                                {
                                    <div class="badge-best">
                                        <span class="badge bg-danger">Бестселлер</span>
                                    </div>
                                }
                            </div>

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <a href="@Url.Action("Details", "Product", new { id = product.Id })"
                                       class="text-decoration-none text-dark product-title">
                                        @product.Name
                                    </a>
                                </h5>

                                <div class="mt-auto">
                                    <p class="card-text text-primary fw-bold mb-2">@product.Price.ToString("N0") ₽</p>

                                    @if (product.StockQuantity > 0)
                                    {
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                                                <i class="bi bi-cart-plus"></i> В корзину
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-secondary btn-sm w-100" disabled>
                                            <i class="bi bi-cart-x"></i> Нет в наличии
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <p class="text-muted">Пока нет бестселлеров. Скоро они появятся!</p>
            </div>
        }
    </div>

    <!-- Категории -->
    @if (categories.Any())
    {
        <div class="mb-5">
            <h2 class="text-center mb-4">Популярные категории</h2>
            <div class="row">
                @foreach (var category in categories.Take(4))
                {
                    <div class="col-md-3 col-sm-6 mb-4">
                        <div class="category-card text-center p-4"
                             style="background-color: #f8f9fa; border-radius: 10px; height: 150px; display: flex; align-items: center; justify-content: center; cursor: pointer;"
                             onclick="location.href='/Catalog?category=@category'">
                            <h4>@category</h4>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Преимущества -->
    <div class="row text-center mb-5">
        <div class="col-md-3 mb-4">
            <div class="p-3">
                <i class="bi bi-truck display-4 text-primary mb-3"></i>
                <h5>Быстрая доставка</h5>
                <p class="text-muted">Доставка по России от 1 дня</p>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="p-3">
                <i class="bi bi-arrow-counterclockwise display-4 text-primary mb-3"></i>
                <h5>Возврат 14 дней</h5>
                <p class="text-muted">Легкий возврат в течение 14 дней</p>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="p-3">
                <i class="bi bi-shield-check display-4 text-primary mb-3"></i>
                <h5>Гарантия качества</h5>
                <p class="text-muted">Все товары проходят проверку</p>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="p-3">
                <i class="bi bi-headset display-4 text-primary mb-3"></i>
                <h5>Поддержка 24/7</h5>
                <p class="text-muted">Круглосуточная поддержка</p>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        padding: 80px 20px;
    }

    .category-card:hover {
        background-color: #e9ecef !important;
        transition: background-color 0.3s;
    }

    .product-card {
        transition: transform 0.3s, box-shadow 0.3s;
        border: 1px solid #eaeaea;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .product-image-container {
        position: relative;
        overflow: hidden;
        height: 200px;
        background-color: #f8f9fa;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    .product-title {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 48px;
    }

    .badge-best {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 1;
    }

    .badge {
        font-size: 0.7rem;
        padding: 4px 8px;
    }
</style>