@model alicedress.Models.Order
@{
    ViewData["Title"] = "Подтверждение заказа";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-check-circle"></i> Заказ успешно оформлен!
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle-fill display-1 text-success"></i>
                        <h3 class="mt-3">Спасибо за ваш заказ!</h3>
                        <p class="text-muted">Номер вашего заказа: <strong>#@Model.Id</strong></p>
                    </div>

                    <div class="alert alert-info">
                        <h6><i class="bi bi-info-circle"></i> Информация о заказе</h6>
                        <p class="mb-0">
                            Мы отправили подтверждение на email: <strong>@Model.CustomerEmail</strong><br>
                            В ближайшее время с вами свяжется наш менеджер для уточнения деталей.
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>Детали заказа</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Номер заказа:</strong></td>
                                    <td>#@Model.Id</td>
                                </tr>
                                <tr>
                                    <td><strong>Дата:</strong></td>
                                    <td>@Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>Статус:</strong></td>
                                    <td><span class="badge bg-info">@Model.Status</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Сумма:</strong></td>
                                    <td class="fw-bold">@Model.TotalAmount.ToString("N0") ₽</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>Доставка</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Способ:</strong></td>
                                    <td>@Model.DeliveryMethod</td>
                                </tr>
                                <tr>
                                    <td><strong>Адрес:</strong></td>
                                    <td>@Model.ShippingAddress</td>
                                </tr>
                                <tr>
                                    <td><strong>Оплата:</strong></td>
                                    <td>@Model.PaymentMethod</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <p class="text-muted">
                            Вы можете отслеживать статус заказа в <a href="/Account/Orders">личном кабинете</a>
                        </p>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a href="/" class="btn btn-primary">
                                <i class="bi bi-house"></i> На главную
                            </a>
                            <a href="/Catalog" class="btn btn-outline-primary ms-2">
                                <i class="bi bi-shop"></i> Продолжить покупки
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>